<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    style="@style/fragmentStyle"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:text="Личные данные"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back" />

    <ImageView
        android:id="@+id/profileImage"
        app:layout_constraintBottom_toBottomOf="@id/personalTextView"
        app:layout_constraintTop_toTopOf="@id/personalTextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:src="@drawable/image13"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/showMasterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Показывать название салона"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/personalTextView"
        />
    <Switch
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/showMasterName"
        app:layout_constraintTop_toTopOf="@id/showMasterName"
        app:layout_constraintBottom_toBottomOf="@id/showMasterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/showName"
        app:layout_constraintTop_toBottomOf="@id/showMasterName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Название салона"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/showName"
        app:layout_constraintTop_toTopOf="@id/showName"
        android:layout_width="144dp"
        android:text="DePretier"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/name"
        app:layout_constraintTop_toBottomOf="@id/showName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Имя"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/name"
        app:layout_constraintTop_toTopOf="@id/name"
        android:layout_width="144dp"
        android:text="Wade"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/lastName"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Фамилия"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/lastName"
        app:layout_constraintTop_toTopOf="@id/lastName"
        android:layout_width="144dp"
        android:layout_marginEnd="15dp"
        android:text="Warren"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/phone"
        app:layout_constraintTop_toBottomOf="@id/lastName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Телефон"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        app:layout_constraintTop_toTopOf="@id/phone"
        android:layout_width="144dp"
        android:text="(316) 555-0116"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/email"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/email"
        app:layout_constraintTop_toTopOf="@id/email"
        android:layout_width="144dp"
        android:text="wade@g.com"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/city"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Город"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/city"
        app:layout_constraintTop_toTopOf="@id/city"
        android:layout_width="144dp"
        android:layout_marginEnd="15dp"
        android:text="Riga"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/instagram"
        app:layout_constraintTop_toBottomOf="@id/city"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/instagram"
        app:layout_constraintTop_toTopOf="@id/instagram"
        android:layout_width="144dp"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/adres"
        app:layout_constraintTop_toBottomOf="@id/instagram"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Адрес"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/adresEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/adres"
        app:layout_constraintTop_toTopOf="@id/adres"
        android:layout_width="144dp"
        android:text="Lubanas iela 4"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/howToFind"
        app:layout_constraintTop_toBottomOf="@id/adres"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Как найти"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/message"
        app:layout_constraintStart_toStartOf="@id/adresEditText"
        app:layout_constraintEnd_toEndOf="@id/adresEditText"
        app:layout_constraintTop_toBottomOf="@id/adresEditText"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/message"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/aboutMe"
        app:layout_constraintTop_toBottomOf="@id/howToFind"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="О себе"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        app:layout_constraintStart_toStartOf="@id/message"
        app:layout_constraintEnd_toEndOf="@id/message"
        app:layout_constraintTop_toBottomOf="@id/message"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/message"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/calendar"
        android:src="@drawable/calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aboutMe"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Управление рассписанием"
        android:layout_width="wrap_content"
        android:id="@+id/calendarText"
        app:layout_constraintTop_toTopOf="@id/calendar"
        app:layout_constraintBottom_toBottomOf="@id/calendar"
        app:layout_constraintStart_toEndOf="@id/calendar"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/save"
        app:layout_constraintTop_toBottomOf="@id/calendar"
        android:layout_marginTop="22dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="62dp"
        android:text="Сохранить"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/closeAcc"
        app:layout_constraintTop_toBottomOf="@id/save"
        android:layout_marginTop="22dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="62dp"
        android:text="Выйти из учетной записи"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>